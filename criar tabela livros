/* Criar a tabela da sua biblioteca particular */
CREATE TABLE livros (
  id INT auto_increment PRIMARY KEY,
  titulo text,
  nomeAutor text,
  sobrenomeAutor text,
  edicao varchar (50),
  editora varchar(50),
  anoPublicacao year,
  qtdePaginas int,
  genero ENUM ( 
    'antologia', 
    'autoajuda',
    'biográfico',
    'científicos',
    'contos',
    'crônicas',
    'didáticos',
    'ficção',
    'guias',
    'infatojuvenis',
    'manuais'
    ),
  prateleira ENUM (
    'cabeceira',
    'clássicos',
    'contabilidade',
    'de bolso',
    'hq',
    'mangá',
    'marxistas',
    'modernidade',
    'negócios',
    'trabalho',
    economia',
    weberianos'
    ),
  idioma varchar(50),
  adquiridoData date,
  status ENUM (
    'abandonado',
    'emprestado',
    'lendo',
    'li',
    'relendo'
    )
);
